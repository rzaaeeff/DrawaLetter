<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragment.MainFragment">

    <Button
        android:id="@+id/btnInteractive"
        android:onClick="openInteractiveMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Başla / Interactive Mode" />

    <Button
        android:id="@+id/btnDraw"
        android:onClick="openDrawFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kef elə / Free Mode" />

    <Button
        android:id="@+id/btnList"
        android:onClick="openListFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siyahı / List" />

    <Button
        android:id="@+id/btnShare"
        android:onClick="share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Göndər / Share" />

</LinearLayout>