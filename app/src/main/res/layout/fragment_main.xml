<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragment.MainFragment">

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textSize="20dp"
        tools:text="@string/task_not_completed" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btnInteractive"
        android:onClick="openInteractiveMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/interactive_mode" />

    <Button
        android:id="@+id/btnDraw"
        android:onClick="openFreeModeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/free_mode" />

    <Button
        android:id="@+id/btnList"
        android:onClick="openListFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list" />

    <Button
        android:id="@+id/btnShare"
        android:onClick="share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share" />

</LinearLayout>